pkgname=obr-control-panel
pkgver=1.03
pkgrel=1
pkgdesc="A tool to adjust settings in OBRevenge"
arch=('any')
license=('GPL')
depends=('python2' 'tint2' 'xfce4-panel' 'mate-panel-gtk3' 'lxpanel' 'openbox')
source=("control_panel"
        "control-panel.desktop")
md5sums=('937ba270c35eb9110ec8410b3d84bf85'
         '187dfaa97e26e6e8a3aa43e089f81fed')


package() {
    
    mkdir -p "${pkgdir}/usr/bin/"
    cp "${srcdir}/control_panel" "${pkgdir}/usr/bin/"
    mkdir -p "${pkgdir}/usr/share/applications/"
    cp "${srcdir}/control-panel.desktop" "${pkgdir}/usr/share/applications/"
}

# -*- mode: bash;-*-




