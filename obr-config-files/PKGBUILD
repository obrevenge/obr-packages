# Maintainer: Jody James <ajjamesobr@gmail.com>

pkgname=obr-config-files
pkgver=1.01
pkgrel=1
pkgdesc="Configuration Files for OBRevenge"
arch=('any')
license=('GPL')
depends=('openbox')
source=(".conky"
	"openbox")
md5sums=('SKIP')
install=obr-config-files.install


package() {
    
    mkdir -p "${pkgdir}/etc/skel/.config"
    cp -r "${scrdir}openbox" "${pkgdir}/etc/skel/.config"
    mkdir -p "${pkgdir}/etc/skel/.conky"
    cp -r "${scrdir}.config" "${pkgdir}/etc/skel"

}

# -*- mode: bash;-*-

