# Maintainer: Jody James <ajjamesobr@gmail.com>

pkgname=obr-config-files
pkgver=1.02
pkgrel=1
pkgdesc="Configuration Files for OBRevenge"
arch=('any')
license=('GPL')
depends=('openbox' 'conky-manager' 'paranoid')
source=("git+https://github.com/obrevenge/obr-config-files.git")
md5sums=('SKIP')
install=obr-config-files.install


package() {
    
    mkdir -p "${pkgdir}/etc/skel/.config"
    cp -r "${scrdir}obr-config-files/openbox_new" "${pkgdir}/etc/skel/.config"
    mkdir -p "${pkgdir}/etc/skel/.conky"
    cp -r "${scrdir}obr-config-files/.conky_new" "${pkgdir}/etc/skel"

}

# -*- mode: bash;-*-

