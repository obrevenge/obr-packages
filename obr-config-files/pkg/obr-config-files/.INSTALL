pre_install() {
	rm -rf /etc/skel/.config/openbox
}

pre_upgrade() {
	pre_install

}

post_install() {
	rm -rf /usr/share/applications/applications/*
rm -rf /usr/share/applications/control_panel/
mkdir -p /usr/share/applications/control_panel/
rm -rf /etc/skel/.config/openbox
	cp -r /etc/skel/.config/openbox_new /etc/skel/.config/openbox
	rm -rf /etc/skel/.config/openbox_new
	cp -r /etc/skel/.conky_new/* /etc/skel/.conky/
	rm -rf /etc/skel/.conky_new

cp -r /etc/obrevenge/control_panel/* /usr/share/applications/control_panel/
rm -rf /usr/share/applications/control_panel/software/pamac-updater.desktop 
rm -rf /usr/share/applications/control_panel/software/pamac-manager.desktop
rm -rf /usr/share/applications/control_panel/customization/lxappearance.desktop
rm -rf /usr/share/applications/control_panel/software/gufw.desktop
rm -rf /usr/share/applications/control_panel/software/obsoftware.desktop
rm -rf /usr/share/applications/control_panel/customization/mate-notification-properties.desktop
rm -rf /usr/share/applications/control_panel/system/qxkb.desktop
}

post_upgrade() {
	post_install
}
