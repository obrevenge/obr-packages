depends=('python2' 'dolphin' 'dolphin-plugins' 'gwenview' 'kate' 'konsole' 'kdenlive' 'spectacle' 'kdf' 'kdialog' 'kcalc' 'kaccounts-integration' 'kaccounts-providers' 'ffmpegthumbs' 'ark' 'kdeconnect' 'revenge-software-install-tool' 'revenge-tools' 'revenge-welcome' 'revenge-wallpapers' 'lightdm' 'lightdm-gtk-greeter' 'lightdm-gtk-greeter-settings' 'w3m' 'imagemagick' 'terminus-font' 'cmatrix' 'qt4' 'neofetch' 'conky' 'scrot' 'surfn-icons-git' 'chromium' 'tumbler' 'gptfdisk' 'ntfs-3g' 'sl' 'pavucontrol' 'mkinitcpio-openswap' 'squashfs-tools' 'gnome-disk-utility' 'gksu' 'zenity' 'wget' 'lynx' 'pamac-aur' 'yaourt' 'yad' 'gparted' 'htop' 'rsync' 'reflector' 'ttf-dejavu' 'file-roller')
source=("git+$url.git")
