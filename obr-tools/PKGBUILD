pkgname=obr-tools
pkgver=1.05
pkgrel=1
pkgdesc="Script patches and tools for OBRevenge"
arch=('any')
license=('GPL')
depends=('python2' 'openbox' 'obr-config-files')
source=("arandr-wr.sh"
        "autostart"
        "cleanup.sh"
        "getwallpapers.sh"
        "nvidia-driver.sh"
        "postinstall.sh"
        "screenlayout.sh"
        "updatemirrorlist.sh"
        "vbox-clear.sh"
	"pcmanfmroot_new.desktop"
	"stopconky.sh"
	"startconky.sh"
	"config-upgrade")
md5sums=('e5943363a1cecb2d48b01e3b48ff17b6'
         'e84623449608387e2fa21d814b0779b4'
         'b8ceb9f86a0f1a3a0145726da62b5495'
         '518d22414a65b9266a72ae4497fb251e'
         '42ba63819ed6afdb8d3d5e5c6d464678'
         '3d3adf00aebd7a9241fe9e866fae0986'
         '7490fb101a6f08cdc0ab00ad1ee9a335'
         'b718d91db87aa927180bcf2631f9bf1f'
         'a6655957ddb05a79d0a7606800d601ec'
         '00f6bb1a59bec771c55e15cd18cb2af2'
         'd5a5099479aa24a2a9d30f7cfe587556'
         '0a70ec9ce4e473ffde2b8fd1847489f3'
         '918345ea701280970f6d19971e7210e2')


install="obr-tools.install"

package() {
    
    mkdir -p "${pkgdir}/usr/bin/"
    cp "${srcdir}/arandr-wr.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/autostart" "${pkgdir}/usr/bin/"
    cp "${srcdir}/cleanup.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/getwallpapers.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/nvidia-driver.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/postinstall.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/screenlayout.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/updatemirrorlist.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/vbox-clear.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/startconky.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/stopconky.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/config-upgrade" "${pkgdir}/usr/bin/"
    mkdir -p "${pkgdir}/usr/share/applications/"
    cp "${srcdir}/pcmanfmroot_new.desktop" "${pkgdir}/usr/share/applications/"

}

