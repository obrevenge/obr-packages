install="obr-tools.install"

package() {
    
    mkdir -p "${pkgdir}/usr/bin/"
    cp "${srcdir}/arandr-wr.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/autostart" "${pkgdir}/usr/bin/"
    cp "${srcdir}/cleanup.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/getwallpapers.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/nvidia-driver.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/postinstall.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/screenlayout.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/updatemirrorlist.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/vbox-clear.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/startconky.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/stopconky.sh" "${pkgdir}/usr/bin/"
    cp "${srcdir}/config-upgrade" "${pkgdir}/usr/bin/"
		cp "${srcdir}/codecs-installer.sh" "${pkgdir}/usr/bin/"
		cp "${srcdir}/flashinstall.sh" "${pkgdir}/usr/bin/"
		cp "${srcdir}/grub-repair.sh" "${pkgdir}/usr/bin/"
		cp "${srcdir}/kernel-tool.sh" "${pkgdir}/usr/bin/"
    mkdir -p "${pkgdir}/usr/share/applications/control_panel/obr-tools/"
    cp "${srcdir}/pcmanfmroot_new.desktop" "${pkgdir}/usr/share/applications/"
		cp "${srcdir}/obr-codecs.desktop" "${pkgdir}/usr/share/applications/control_panel/obr-tools/"
		cp "${srcdir}/obr-flashinstaller.desktop" "${pkgdir}/usr/share/applications/control_panel/obr-tools/"
		cp "${srcdir}/obr-grubrepair.desktop" "${pkgdir}/usr/share/applications/control_panel/obr-tools/"
		cp "${srcdir}/obr-kerneltool.desktop" "${pkgdir}/usr/share/applications/control_panel/obr-tools/"
		cp "${srcdir}/obr-nvidia.desktop" "${pkgdir}/usr/share/applications/control_panel/obr-tools/"
		cp "${srcdir}/obr-vbox.desktop" "${pkgdir}/usr/share/applications/control_panel/obr-tools/"
		cp "${srcdir}/xfce4-terminal-root.desktop" "${pkgdir}/usr/share/applications/"

}

