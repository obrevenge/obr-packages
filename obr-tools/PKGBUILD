pkgname=obr-tools
pkgver=1.10
pkgrel=1
pkgdesc="Script patches and tools for OBRevenge"
arch=('any')
license=('GPL')
depends=('python2' 'openbox' 'obr-config-files' 'python2-xdg')
source=("arandr-wr.sh"
        "autostart"
        "cleanup.sh"
        "getwallpapers.sh"
        "nvidia-driver.sh"
        "postinstall.sh"
        "screenlayout.sh"
        "updatemirrorlist.sh"
        "vbox-clear.sh"
	"pcmanfmroot_new.desktop"
	"stopconky.sh"
	"startconky.sh"
	"config-upgrade"
	"codecs-installer.sh"
	"flashinstall.sh"
	"grub-repair.sh"
	"kernel-tool.sh"
	"obr-codecs.desktop"
	"obr-flashinstaller.desktop"
	"obr-grubrepair.desktop"
	"obr-kerneltool.desktop"
	"obr-nvidia.desktop"
	"obr-vbox.desktop"
	"xfce4-terminal-root.desktop")

md5sums=('e5943363a1cecb2d48b01e3b48ff17b6'
         'de6afb095d35ff4dc1f176b6514c0731'
         'b8ceb9f86a0f1a3a0145726da62b5495'
